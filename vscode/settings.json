{
    "window.zoomLevel": 1,
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "Material Theme Ocean High Contrast",
    "editor.fontFamily": "Consolas, Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.fontWeight": "100",
    "terminal.integrated.fontFamily": "Consolas, Input Mono Narrow, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 16,
    "[elixir]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.wordBasedSuggestions": false,
        "editor.formatOnType": true,
        "editor.acceptSuggestionOnEnter": "off",
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "editor.defaultFormatter": "elixir-lsp.elixir-ls",
        "editor.formatOnSave": true
    },
    "elixirLS.suggestSpecs": false,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "editor.rulers": [80, 100],
    "editor.trimAutoWhitespace": true
}