# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec /usr/bin/pulseaudio-ctl up
bindsym XF86AudioLowerVolume exec /usr/bin/pulseaudio-ctl down

# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# $i3-background
# colorclass border background text indicator
client.focused #1c648f #2980b9 #ffffff #dddddd
client.focused_inactive #333333 #ecf0f1 #888888 #292d2e
client.unfocused #000000 #000000 #ffffff #292d2e
client.urgent #2f343a #900000 #ffffff #900000

#new_window 1pixel
exec "setxkbmap pl"
exec_always --no-startup-id "xmodmap ~/.Xmodmap"
exec "~/switch_display"
#exec "nitrogen --restore"
exec "xclip"
exec "nm-applet"
exec_always "lxpanel"
